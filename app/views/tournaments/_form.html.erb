<% if Team.count < 16 %>
  <h5 class="text-danger">There is no 16 teams. Create it.</h5>
  <%= link_to 'Add team', new_team_path, class: 'btn btn-success' %>
  <%= link_to 'Generate 16 fake teams', fake_teams_path, method: :post, class: 'btn btn-primary' %>
<% else %>
  <%= bootstrap_form_for(@tournament) do |f| %>
    <%= f.text_field :title %>

    <h3>Select teams:</h3>
    <%= f.collection_check_boxes :team_ids, Team.all, :id, :title, checked: @tournament.teams, skip_label: true %>

    <%= f.submit 'Create', class: 'btn btn-success' %>
  <% end %>
<% end %>
